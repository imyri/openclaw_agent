# ---------------------------------------------------------
# OPENCLAW-CLASS AGENT CONFIGURATION
# ---------------------------------------------------------
SYSTEM_TIMEZONE=UTC
DST_AWARE=True

# --- BINANCE EXCHANGE ---
# WARNING: Ensure these API keys have "Futures Trading" enabled, but "Withdrawals" DISABLED.
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# --- TELEGRAM ALERTS ---
# For the 8:00 AM IST daily brief and live trade notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# --- DATABASE STATE TRACKING ---
# Using PostgreSQL for robust, sub-millisecond state management across containers
POSTGRES_USER=openclaw_admin
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=openclaw_state
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@database:5432/${POSTGRES_DB}

# --- LLM BRAIN CONFIGURATION ---
# Points to the Dockerized Ollama service
OLLAMA_BASE_URL=http://ollama-brain:11434
OLLAMA_MODEL=deepseek-r1:7b